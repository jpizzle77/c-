@model Animal

<h2>add a animal</h2>

<form asp-action="CreateAnimal" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="type"></span>
        <label asp-for="@Model.type"></label>
        <input asp-for="@Model.type">
    </div>
    <div class="form-group">
        <span asp-validation-for="weight"></span>
        <label asp-for="@Model.weight"></label>
        <input asp-for="@Model.weight">
    </div>
    <div class="form-group">
        <span asp-validation-for="name"></span>
        <label asp-for="@Model.name"></label>
        <input asp-for="@Model.name">
    </div>
    <input type="submit" value="enter a animal">
</form>