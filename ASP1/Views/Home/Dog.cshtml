@model Dog


<h3>Add a dog</h3>


<form asp-action="AddDog" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="type"></span>
        <label asp-for="@Model.type"></label>
        <input asp-for="@Model.type">
    </div>

    <div class="form-group">
        <span asp-validation-for="weight"></span>
        <label asp-for="@Model.weight"></label>
        <input asp-for="@Model.weight">
    </div>

    <div class="form-group">
        <span asp-validation-for="email"></span>
        <label asp-for="@Model.email"></label>
        <input asp-for="@Model.email">
    </div>
    <input type="submit" value="add a dog">

</form>