@model Veggie

<h2>Add a veggie</h2>

<form asp-action="AddVeggie" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="type"></span>
        <label asp-for="@Model.type"></label>
        <input asp-for="@Model.type">
    </div>

    <div class="form-group">
        <span asp-validation-for="color"></span>
        <label asp-for="@Model.color"></label>
        <input asp-for="@Model.color">
    </div>

    <div class="form-group">
        <span asp-validation-for="weight"></span>
        <label asp-for="@Model.weight"></label>
        <input asp-for="@Model.weight">
    </div>
    <input type="submit" value="add veggie">
</form>