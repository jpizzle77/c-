@model User

<h2>Add a user</h2>


<form asp-action="Create" asp-controller="Home" method="post">

    <div class="form-group">
        <span asp-validation-for="first_name"></span>
        <label asp-for="@Model.first_name"></label>
        <input asp-for="@Model.first_name">
    </div>

     <div class="form-group">
        <span asp-validation-for="last_name"></span>
        <label asp-for="@Model.last_name"></label>
        <input asp-for="@Model.last_name">
    </div>

     <div class="form-group">
        <span asp-validation-for="age"></span>
        <label asp-for="@Model.age"></label>
        <input asp-for="@Model.age">
    </div>
    <input type="submit" value="add user">



</form>