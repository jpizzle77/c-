@model Friend

<h2>Add a friend</h2>


<form asp-action="CreateFriend" asp-controller="Home" method="post">

    <div class="form-group">
        <span asp-validation-for="first_name"></span>
        <label asp-for="@Model.first_name"></label>
        <input asp-for="@Model.first_name">
    </div>

     <div class="form-group">
        <span asp-validation-for="last_name"></span>
        <label asp-for="@Model.last_name"></label>
        <input asp-for="@Model.last_name">
    </div>

     <div class="form-group">
        <span asp-validation-for="email"></span>
        <label asp-for="@Model.email"></label>
        <input asp-for="@Model.email">
    </div>
    <input type="submit" value="add friend">



</form>